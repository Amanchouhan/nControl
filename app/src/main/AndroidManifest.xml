<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.nemi.ncontrol">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_ncontrol"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:screenOrientation="landscape"
        android:theme="@style/AppTheme">
        <receiver android:name="nemi.in.BootReciever">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="nemi.in.ActivityMain"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--<activity android:name="nemi.in.ActivityMainvityMain" />-->
        <activity android:name="nemi.in.ActivityNavDrawer"
            android:screenOrientation="landscape"/>
        <activity android:name="common.activities.SampleActivityBase"
            android:screenOrientation="landscape"/>
        <service android:name="printing.DrawerService"
            android:screenOrientation="landscape"
            />
    </application>
</manifest>
