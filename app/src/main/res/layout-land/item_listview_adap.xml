<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/tv_item_column_id"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="First"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_item_id"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:paddingStart="4dp"
        android:text="First" />

    <TextView
        android:id="@+id/tv_category_id"
        android:layout_width="0dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="start"
        android:text="Second" />

    <TextView
        android:id="@+id/tv_price_id"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="start"
        android:text="Third" />


    <ImageButton
        android:id="@+id/update_item_id"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_mode_edit_black_48dp"
        android:layout_height="40dp"
        android:layout_weight=".18"
        android:text="UPDATE" />

    <ImageButton
        android:id="@+id/dele_item_id"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_delete_black_48dp"
        android:layout_height="40dp"
        android:layout_weight="0.18" />

</LinearLayout>
