<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="#FFDDFF" />

    <TextView
        android:id="@+id/fetch"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/img"
        android:text="name" />

    <TextView
        android:id="@+id/item_fetch"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fetch"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="1dp"
        android:text="Description" />

    <TextView
        android:id="@+id/category_fetch"
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_fetch"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="1dp"
        android:text="Description" />

    <TextView
        android:id="@+id/price_fetch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_fetch"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="1dp"
        android:text="Description" />


</RelativeLayout>