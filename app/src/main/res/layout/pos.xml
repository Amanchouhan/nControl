<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_list"
        android:text="user name"
        android:layout_marginLeft="157dp"
        android:layout_marginStart="157dp"
        android:layout_alignBaseline="@+id/role_list"
        android:layout_alignBottom="@+id/role_list"
        android:layout_toRightOf="@+id/role_list"
        android:layout_toEndOf="@+id/role_list" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/role_list"
        android:text="role"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/edit_userdetail"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/delete_userdetail"
        android:layout_toStartOf="@+id/delete_userdetail" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delete_userdetail"
        android:layout_marginRight="73dp"
        android:layout_marginEnd="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




</RelativeLayout>