<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/selected_id_on_pos"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text="Description"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/selected_item_on_pos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.3"
        android:textSize="15dp"
        android:singleLine="true"
        android:text="Item" />


    <TextView
        android:id="@+id/selected_price_on_pos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:textSize="15dp"
        android:layout_weight=".9"
        android:text="Price" />
    <Button
        android:id="@+id/selected_quantity_on_pos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:background="@drawable/button_curved"
        android:textColor="#ffffff"
        android:textSize="15dp"/>


    <TextView
        android:id="@+id/selected_amount_on_pos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_weight="1"
        android:text="Amount" />


    <Button
        android:id="@+id/minus_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_weight=".4"
        android:background="@drawable/button_rounded_warning"
        android:text="X"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/qty_item"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft=".3dp"
        android:background="@drawable/button_curved"
        android:layout_marginRight="10dp"
        android:text="QTY"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />



</LinearLayout>